from selenium import webdriver
import time 

chrome_path = "C:\Users\Lanfia\Desktop\chromedriver.exe"    # the path of the chromedrive app on my pc
driver = webdriver.Chrome(chrome_path)                      # creates a chrome instance called driver

def login(url, username, password):
  driver.get(url)                     #pass the desired url into the chrome instance called driver
  username_element = driver.find_element_by_id('username')
  username_element.send_keys(username)    #pass the given username into the box
  
  passwd_element = driver.find_element_by_name('password'0
  passwd_element.send_keys(password)      #send the given password into the password element
  
  submit_element1 = driver.find_element_by_name('submit')   #finds the submit element
  submit_element1.click()             #click the sumbit or 'Log in' button
  
  print 'Current Page: ', driver.title
  
  bu_brain_element = driver.find_element_by_css_selector("a[href*=ssomanager']")   
  bu_brain_element.click()            #find and click the BU Brain tab 
  
  driver.swutch_to_window(driver.window_handles[1])     #switch to the new opened window
  print "Current Page: ", driver.title
  
  student_element = driver.find_element_by_link_text("Student").click()   #finds and click the student tab
  print "Current Page: ", driver.title
  
  registration_element = driver.find_element_by_link_text("Registration").click()
  add_or_drop_element = driver.find_element_by_link_text("Add or Drop Courses").click()
  submit_element2 = driver.find_element_by_xpath("//input[@type='submit']").click()
  print "Current Page: ", driver.title
  
  
  time.sleep(10)
  driver.quit()
  
if "__name__" == "__main__":
  login(url, username, password)
  
 
